@model Aircnc.FrontStage.Models.ViewModels.Member.MemberViewModel

<section>
    <div class="container">
        <div class="row">
            <div class="topper-content ps-5 col-md-12">
                <div class=" title">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">帳號</a></li>
                            <li class="breadcrumb-item active" aria-current="page">全球偏好設定</li>
                        </ol>
                    </nav>
                </div>
                <div class="title">
                    <h4>全球偏好設定</h4>
                </div>
            </div>
            <div class="col-12 col-md-7 left-container my-5 ps-5">
                <div class="left-main-cotent">
                    <div class="each-item">
                        <h5>偏好語言</h5>
                        <div>
                            <a class="btn edit-btn" data-bs-toggle="collapse" href="#edit-btn" role="button"
                               aria-expanded="false" aria-controls="edit-btn">
                                編輯
                            </a>
                        </div>
                    </div>
                    <div class="collapse" id="edit-btn">
                        <div>這會更新您在 Airbnb 上看到的內容，以及我們與您的溝通方式。</div>
                        <div class="card card-body">
                            <div class="dropdown-container">
                                <button class="btn dropdown-toggle" type="button" id="dropdown-selector"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    中文(繁體)
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdown-selector">
                                    <li><a class="dropdown-item" href="#">中文(繁體)</a></li>
                                    <li><a class="dropdown-item" href="#">English</a></li>
                                    <li><a class="dropdown-item" href="#">日本語</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="each-item">
                        <h5>偏好幣別</h5>
                        <div>
                            <a class="btn edit-btn" data-bs-toggle="collapse" href="#edit-btn-currency" role="button"
                               aria-expanded="false" aria-controls="edit-btn-currency">
                                編輯
                            </a>
                        </div>
                    </div>
                    <div class="collapse" id="edit-btn-currency">
                        <div class="card card-body">
                            <div class="dropdown-container">
                                <button class="btn dropdown-toggle" type="button" id="dropdown-selector"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    新台幣
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdown-selector">
                                    <li><a class="dropdown-item" href="#">新台幣</a></li>
                                    <li><a class="dropdown-item" href="#">美金</a></li>
                                    <li><a class="dropdown-item" href="#">日元</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="each-item">
                        <h5>時區</h5>
                        <div>
                            <a class="btn edit-btn" data-bs-toggle="collapse" href="#edit-btn-time-zone" role="button"
                               aria-expanded="false" aria-controls="edit-btn-time-zone">
                                編輯
                            </a>
                        </div>
                    </div>
                    <div class="collapse" id="edit-btn-time-zone">
                        <div class="card card-body">
                            <div class="dropdown-container">
                                <button class="btn dropdown-toggle" type="button" id="dropdown-selector"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdown-selector">
                                    <li><a class="dropdown-item" href="#"></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-3 right-container py-md-auto d-none d-md-block ms-md-5">
                <hr id="hr-sm-display">
                <i class="fas fa-sliders-h"></i>
                <h5>全球偏好設定</h5>
                <p>Airbnb 非常重視你的隱私。你可以使用此頁面選擇分享活動的方式。</p>
            </div>
        </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
</script>

@section topCSS{
    <link href="~/css/Preference/normalize.css" rel="stylesheet" />
    <link href="~/css/Preference/Preference.css" rel="stylesheet" />
}