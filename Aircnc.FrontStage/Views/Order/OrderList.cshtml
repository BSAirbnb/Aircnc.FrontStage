        <div class="row topic">
            <h1 class="topic fw-bold fs-2 ms-2 mt-3">旅程</h1>
        </div>
    </div>
</div>

<div class="container-fluid content-box mt-5">
    <div class="container">
        <div class="row  reservation rounded-2 mt-2">
            @*@foreach (var history in Model)
                {
                    <div>
                        <span>訂購者姓名:@history.Name</span>
