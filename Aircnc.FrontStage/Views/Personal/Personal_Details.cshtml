@model Aircnc.FrontStage.Models.ViewModels.Member.MemberViewModel
@{ ViewData["Title"] = "個人資料";}


<section>
    <div class="container">
        <div class="row">
            <div class="col-md-3 left-container">
                <div class="d-flex justify-content-center profile">
                    <div class="profile-picture-container">
                        <img src="@Model.Photo" class="rounded-circle profile-picture">
                    </div>
                </div>
                <div class="update-photo">
                    <a href="">更新相片</a>
                </div>
                <div class="review my-4">
                    <i class="bi bi-star"></i>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-star" viewBox="0 0 16 16">
                        <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                    </svg>
                    1則評價
                </div>
                <hr id="hr-sm-display">
                <div class="security-badge">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="identiy-check">
                    <h4>身分驗證</h4>
                    <p>透過身分驗證徽章展示你真的是本人。</p>
                </div>
                <div class="d-grid gap-2 d-md-block get-badge">
                    <button class="btn btn-outline-dark my-2" type="button">取得徽章</button>
                </div>
                <hr>
                <div class="confirm-already">
                    <h4 class="my-4">@Model.Name 已確認</h4>
                    <div class="checklist my-2">
                        <i class="fas fa-check"></i>
                        電子郵件地址
                    </div>
                    <div class="checklist my-2">
                        <i class="fas fa-check"></i>
                        電話號碼
                    </div>
                    <div class="checklist my-2">
                        <i class="fas fa-check"></i>
                        工作用電子郵件
                    </div>
                </div>
            </div>
            <!-- <hr id="hr-sm-display"> -->
            <div class="col-12 col-md-7 my-5 right-container">
                <div class="title">
                    <h2>嗨！我是 @Model.Name</h2>
                </div>
                <div class="regist-date">加入時間：2015</div>
                <div class="edit-personal-data my-1">
                    <a href="#">編輯個人資料</a>
                </div>
                <div class="about-me my-4">
                    <h5>關於我</h5>
                </div>
                <div class="say-something my-2">Hello, I'm @Model.Name</div>
                <div class="residency my-2"><i class="fas fa-home"></i> 住在 @Model.Address</div>
                <div class="language my-3"><i class="fas fa-comment-alt"></i> 使用語言：English、 中文、 日本語</div>
                <hr>
                <div class="user-property my-3">
                    <h4>Yu Cheng的房源</h4>
                </div>
                <div class="property-photo my-2">
                    <img src="@Model.Photo" class="my-2">
                </div>
                <hr>
                <div class="review-container">
                    <i class="fas fa-star"></i>
                    <span class="review-amount">1則評價</span>
                    <div class="comment-date">七月 2016</div>
                    <div class="comment my-2">
                        Yu was a nice guest. He informed me of any problems he has during his stay. Coomunication
                        was really clear. My apartment was clean when he left
                    </div>
                    <div class="commenter-profile-container my-5">
                        <div class="commenter-picture">
                            <img src="@Model.Photo">
                        </div>
                        <div class="commenter mx-2">
                            <div class="user">Adi</div>
                            <div class="regist-date">加入時間：@Model.CreateTime</div>
                        </div>
                    </div>
                    <hr>
                    <a href="" class="my-5">你寫的評價</a>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">

</script>

@section topCSS{
    <link href="~/css/Personal_Details/normalize.css" rel="stylesheet" />
    <link href="~/css/Personal_Details/Personal_Details.css" rel="stylesheet" />
}
